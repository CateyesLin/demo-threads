        android:layout_height="wrap_content"
        android:text="@string/pause"/>
    
    <Button android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"/>
-->
</LinearLayout>
